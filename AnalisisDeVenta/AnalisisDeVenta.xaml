    <Grid Name="MainPanel" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:SiaSf="http://schemas.syncfusion.com/wpf" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    xmlns:sync="clr-namespace:Syncfusion.UI.Xaml.Grid;assembly=Syncfusion.SfGrid.WPF" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  xmlns:sncg="clr-namespace:Syncfusion.Windows.Controls.Grid;assembly=Syncfusion.Grid.WPF" >
        <SiaSf:TabControlExt Name="TabControl1" Margin="0,0,10,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  SiaSf:SkinStorage.VisualStyle="Metro"  IsDisableUnloadTabItemExtContent="True"  EnableLabelEdit="False" TabItemSelectedBackground="#373737" CloseButtonType="Hide">
            <SiaSf:TabItemExt Name="tabItemExt1"  Header="Configuracion" FontSize="15" >
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid  x:Name="GridConfiguracion" Grid.Row="0"  HorizontalAlignment="Center" VerticalAlignment="Center" >
                        <Border CornerRadius="3,3,3,3"  Height="410"  Width="600" Margin="0,0,0,0"   HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="2,2,2,2"  Padding="0" Grid.Row="1" Grid.Column ="1" Grid.ColumnSpan="4"  Grid.RowSpan="8"  >
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                    <GradientStop Color="#D5DBDB" Offset="0" />
                                    <GradientStop Color="Silver" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="15" />
                                    <RowDefinition Height="25" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />

                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions >
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="160" />

                                </Grid.ColumnDefinitions>
                                <TextBlock Foreground="Black" Grid.Column="2" Grid.Row="1" FontSize="12" Margin="0,0,0,0" HorizontalAlignment="Center"  >Desde</TextBlock>
                                <TextBlock Foreground="Black" Grid.Column="3" Grid.Row="1" FontSize="12" Margin="0,0,0,0" HorizontalAlignment="Center"  >Hasta</TextBlock>

                                <TextBlock Grid.Column="1" Grid.Row="2" FontSize="12" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="right"  >Fecha:</TextBlock>
                                <DatePicker Name="FecIni"   HorizontalAlignment="Center" Text="{Binding CabSource.FechaIni}" VerticalAlignment="Center" Width="130" Height="28" Grid.Column="2" Grid.Row="2" Margin="2,0,0,0"  FontSize="12"/>
                                <DatePicker Name="FecFin"   HorizontalAlignment="Center" Text="{Binding CabSource.FechaFin}" VerticalAlignment="Center" Width="130" Height="28" Grid.Column="3" Grid.Row="2" Margin="2,0,0,0"  FontSize="12"/>
                                <TextBlock  Grid.Column="1" Grid.Row="3" Foreground="Black"  FontSize="12" VerticalAlignment="Center" HorizontalAlignment="right" >Referencia:</TextBlock>
                                <TextBox x:Name="TextBoxRefI"   Grid.Column="2" Grid.Row="3"  Width="130" Height="28" MaxLength="15"   FontSize="12"   HorizontalAlignment="Center"  PreviewKeyDown="TextBox_PreviewKeyDown" Tag="inmae_ref"></TextBox>
                                <TextBox  x:Name="TextBoxRefF" Grid.Column="3" Grid.Row="3"  Width="130" MaxLength="15" Height="28"    FontSize="12"   HorizontalAlignment="Center" PreviewKeyDown="TextBox_PreviewKeyDown" Tag="inmae_ref"></TextBox>

                                <TextBlock  Grid.Column="1" Grid.Row="4" Foreground="Black"  FontSize="12" VerticalAlignment="Center" HorizontalAlignment="right" >Bodega:</TextBlock>
                                <TextBox  x:Name="TextBoxBodI" Grid.Column="2" Grid.Row="4" MaxLength="15" Width="130" VerticalAlignment="Center" Height="28"   FontSize="12"   HorizontalAlignment="Center"  PreviewKeyDown="TextBox_PreviewKeyDown" Tag="inmae_bod"></TextBox>
                                <TextBox x:Name="TextBoxBodF" Grid.Column="3" MaxLength="15" Grid.Row="4"  Width="130" VerticalAlignment="Center" Height="28"   FontSize="12"   HorizontalAlignment="Center" TextDecorations="Underline" PreviewKeyDown="TextBox_PreviewKeyDown" Tag="inmae_bod"></TextBox>
                                <TextBlock  Grid.Column="1" Grid.Row="5" Foreground="Black"  FontSize="12" VerticalAlignment="Center" HorizontalAlignment="right" >Cliente:</TextBlock>
                                <TextBox  x:Name="TextBoxTerI" MaxLength="15" Grid.Column="2" Grid.Row="5"  Width="130" Height="28"    FontSize="12"   HorizontalAlignment="Center"  PreviewKeyDown="TextBox_PreviewKeyDown" Tag="comae_ter"></TextBox>
                                <TextBlock  Grid.Column="1" Grid.Row="6"   FontSize="12" VerticalAlignment="Center" HorizontalAlignment="right" >Vendedor:</TextBlock>
                                <TextBox  x:Name="TextBoxVenI" MaxLength="3" Grid.Column="2" Grid.Row="6"  Width="130" Height="30"    FontSize="12"   HorizontalAlignment="Center"  PreviewKeyDown="TextBox_PreviewKeyDown" Tag="inmae_mer"></TextBox>
                                <TextBlock  Grid.Column="1" Grid.Row="7" Foreground="Black"  FontSize="12" VerticalAlignment="Center" HorizontalAlignment="right" >Linea:</TextBlock>
                                <TextBox  x:Name="TextBoxTipI" MaxLength="3" Grid.Column="2" Grid.Row="7"  Width="130" Height="28"    FontSize="12"   HorizontalAlignment="Center"  PreviewKeyDown="TextBox_PreviewKeyDown" Tag="inmae_tip"></TextBox>
                                <TextBox  x:Name="TextBoxTipF" MaxLength="3" Grid.Column="3" Grid.Row="7"  Width="130" Height="28"    FontSize="12"   HorizontalAlignment="Center"  PreviewKeyDown="TextBox_PreviewKeyDown" Tag="inmae_tip"></TextBox>

                                <TextBlock  Grid.Column="1" Grid.Row="8" Foreground="Black"  FontSize="12" VerticalAlignment="Center" HorizontalAlignment="right" >Grupo:</TextBlock>
                                <TextBox  x:Name="TextBoxGrpI" MaxLength="3" Grid.Column="2" Grid.Row="8"  Width="130" Height="28"    FontSize="12"   HorizontalAlignment="Center"  PreviewKeyDown="TextBox_PreviewKeyDown" Tag="inmae_gru"></TextBox>
                                <TextBox  x:Name="TextBoxGrpF" MaxLength="3" Grid.Column="3" Grid.Row="8"  Width="130" Height="28"    FontSize="12"   HorizontalAlignment="Center"  PreviewKeyDown="TextBox_PreviewKeyDown" Tag="inmae_gru"></TextBox>
                                <!--<TextBlock  Grid.Column="1" Grid.Row="9" Foreground="Black"  FontSize="12" VerticalAlignment="Center" HorizontalAlignment="right" >Importacion:</TextBlock>
                                <TextBox  x:Name="TextBoxImpI"  MaxLength="5" Grid.Column="2" Grid.Row="9"  Width="130" Height="28"    FontSize="12"   HorizontalAlignment="Center"  ></TextBox>-->
                                <TextBlock  Grid.Column="4" Grid.Row="8"   FontSize="12" VerticalAlignment="Center" Foreground="#3498db" HorizontalAlignment="Left" Margin="0,14,0,5" >F8=Consultar</TextBlock>
                                <Button  Margin="5,0,5,0" Background="#3498db" Foreground="WhiteSmoke" Grid.Column="2" Grid.Row="11" Name="BtnEjecutar" Width="145" Height="30"  HorizontalAlignment="Center" VerticalAlignment="Center"  Command="{Binding RegisterCommand}" CommandParameter="{Binding ElementName=BtnEjecutar}" Click="ButtonRefresh_Click" Cursor="Hand">Actualizar</Button>
                                <Button  Margin="5,0,5,0"  Background="#3498db" Grid.Column="3" Grid.Row="11" Foreground="WhiteSmoke" Name="BtnSalir" Width="145" Height="30"  HorizontalAlignment="Center" VerticalAlignment="Center"  Command="{Binding RegisterCommand}" CommandParameter="{Binding ElementName=BtnEjecutar}" Click="BtnSalir_Click" Cursor="Hand">Salir</Button>


                            </Grid>


                        </Border>
                    </Grid>
                    <Grid Grid.Row="1" >
                    </Grid>

                    <SiaSf:SfBusyIndicator Name="sfBusyIndicator"
                                    Margin="5"
                                    VerticalAlignment="Bottom" FontSize="12" AnimationSpeed="100" 
                                    AnimationType="Rainy" Header="Cargando Datos - SiasoftApp" Height="200" 
                                    IsBusy="False" />

                </Grid>
            </SiaSf:TabItemExt>

            <SiaSf:TabItemExt Name="tabItemExt2"  Header="Análisis General" FontSize="13"  >
                <Grid>
                    <Grid.Resources>
                        <Style x:Key="botones-menu">
                            <Setter Property="Control.Background" Value="#16a085"/>
                            <Setter Property="Control.BorderBrush" Value="{x:Null}"/>
                            <Setter Property="Control.Foreground" Value="White"/>
                            <Setter Property="Control.Height" Value="40"/>
                            <Setter Property="Control.HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="Control.Margin" Value="0 0 5 0"/>
                            <Setter Property="Control.Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{x:Null}" BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="Control.IsMouseOver" Value="True">
                                    <Setter Property="Control.Background" Value="#FF117A65"/>
                                    <Setter Property="Control.Cursor" Value="Hand"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style x:Key="Tit_dat">
                            <Setter Property="Control.Margin" Value="10 0 0 0"/>
                            <Setter Property="Control.Foreground" Value="#03A9F4"/>
                            <Setter Property="Control.FontWeight" Value="Bold"/>
                            <Setter Property="Control.FontSize" Value="18"/>
                        </Style>
                        <Style TargetType="Border" x:Key="borde">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Height" Value="Auto"/>
                            <Setter Property="BorderThickness" Value="1,1,1,1"/>
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Direction="0" ShadowDepth="0.5" BlurRadius="5" Color="Black"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                        <Style x:Key="title">
                            <Setter Property="Control.FontSize" Value="18"/>
                            <Setter Property="Control.HorizontalAlignment" Value="Center"/>
                            <Setter Property="Control.VerticalAlignment" Value="Center"/>
                            <Setter Property="Control.Foreground" Value="DodgerBlue"/>
                            <Setter Property="Control.FontWeight" Value="Bold"/>
                        </Style>
                        <Style x:Key="value">
                            <Setter Property="Control.FontSize" Value="16"/>
                            <Setter Property="Control.HorizontalAlignment" Value="Center"/>
                            <Setter Property="Control.VerticalAlignment" Value="Center"/>
                            <Setter Property="Control.Foreground" Value="DarkGreen"/>
                            <Setter Property="Control.FontWeight" Value="Bold"/>
                        </Style>

                    </Grid.Resources>

                    <SiaSf:TabControlExt Grid.Row="0"  Name="TabControl2" Margin="0,0,0,1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  SiaSf:SkinStorage.VisualStyle="Metro" IsDisableUnloadTabItemExtContent="True" EnableLabelEdit="False" TabItemSelectedBackground="#373737" CloseButtonType="Hide">
                        <SiaSf:TabItemExt Name="tabItemExt3"  Header="Ventas Por Producto" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="80" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>

                                <TextBlock Text="Analisis de Ventas por Productos" Style="{StaticResource Tit_dat}"/>

                                <!--<Border Grid.Row="1" Background="white" Height="Auto"  BorderBrush="Silver" BorderThickness="1,1,1,1" Margin="5">
                                </Border>-->

                                <Grid Grid.Row="1">



                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>

                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>

                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>

                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>

                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>

                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>

                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource borde}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*"/>
                                                <RowDefinition Height="1*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Registros: " Grid.Row="0" Style="{StaticResource title}"/>
                                            <TextBlock x:Name="Total1" Text="{Binding StringFormat=c}" Grid.Row="1" Style="{StaticResource value}" />
                                        </Grid>
                                    </Border>

                                    <Border Grid.Column="2" Grid.ColumnSpan="2" Style="{StaticResource borde}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*"/>
                                                <RowDefinition Height="1*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Cantidad: " Grid.Row="0" Style="{StaticResource title}"/>
                                            <TextBlock x:Name="TextCantidad1"  Text="{Binding StringFormat=c}" Grid.Row="1" Style="{StaticResource value}"/>
                                        </Grid>
                                    </Border>

                                    <Border Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource borde}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*"/>
                                                <RowDefinition Height="1*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Subtotal: " Grid.Row="0" Style="{StaticResource title}"/>
                                            <TextBlock x:Name="TextSubtotal1"  Text="{Binding StringFormat=c}" Grid.Row="1" Style="{StaticResource value}"/>
                                        </Grid>
                                    </Border>

                                    <Border Grid.Column="6" Grid.ColumnSpan="2" Style="{StaticResource borde}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*"/>
                                                <RowDefinition Height="1*"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Descuento: "  Grid.Row="0" Style="{StaticResource title}"/>
                                            <TextBlock x:Name="TextDescuento1" Grid.Row="1" Style="{StaticResource value}"/>
                                        </Grid>
                                    </Border>


                                    <Border Grid.Column="8" Grid.ColumnSpan="2" Style="{StaticResource borde}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*"/>
                                                <RowDefinition Height="1*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Iva: "  Grid.Row="0" Style="{StaticResource title}"/>
                                            <TextBlock x:Name="TextIva1" Grid.Row="1" Style="{StaticResource value}"/>
                                        </Grid>
                                    </Border>

                                    <Border Grid.Column="10" Grid.ColumnSpan="2" Style="{StaticResource borde}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*"/>
                                                <RowDefinition Height="1*"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Total: "  Grid.Row="0" Style="{StaticResource title}"/>
                                            <TextBlock x:Name="TextTotal1" Grid.Row="1" Style="{StaticResource value}" />
                                        </Grid>
                                    </Border>




                                    <Button Content="Exportar Xls" Click="Button_Click" Tag="1" Grid.Column="13" Cursor="Hand" Style="{StaticResource botones-menu}"  />

                                </Grid>

                                <syncfusion:SfDataGrid FrozenColumnCount="2" AllowResizingColumns="True" Grid.Row="2" x:Name="VentasPorProducto"  EnableDataVirtualization = "True" AutoGenerateColumns="False" ShowGroupDropArea="True" FontSize="10" AllowFiltering="True" Margin="5" FilterChanged="dataGrid_FilterChanged" Tag="1" HeaderStyle="{StaticResource headerStyle}" RowSelectionBrush="#7F3498DB">
                                    <syncfusion:SfDataGrid.Columns>

                                        <SiaSf:GridTemplateColumn MappingName="Detalle" Width="56"  AllowFiltering="False">
                                            <SiaSf:GridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button x:Name="BtnDetalle" Content="..." Click="BTNdetalle_Click" Background="#3498db" Cursor="Hand" Tag="1"/>
                                                </DataTemplate>
                                            </SiaSf:GridTemplateColumn.CellTemplate>
                                        </SiaSf:GridTemplateColumn>

                                        <syncfusion:GridTextColumn HeaderText="Codigo" MappingName="cod_ref" Width="120" />
                                        <syncfusion:GridTextColumn HeaderText="Nombre Producto" MappingName="nom_ref" Width="300"/>
                                        <syncfusion:GridTextColumn HeaderText="Linea" MappingName="nom_tip" Width="120"/>
                                        <syncfusion:GridTextColumn HeaderText="Grupo" MappingName="nom_gru" Width="120"/>
                                        <syncfusion:GridNumericColumn HeaderText="CntVta" MappingName="cantidad" Width="80" NumberDecimalDigits="2"/>
                                        <syncfusion:GridNumericColumn HeaderText="CntDev" MappingName="can_dev" Width="80" NumberDecimalDigits="2"/>
                                        <syncfusion:GridNumericColumn HeaderText="Neto" MappingName="neto" Width="80" NumberDecimalDigits="2"/>
                                        <syncfusion:GridTextColumn DisplayBinding="{Binding Path=subtotal, StringFormat='{}{0:c}'}"  HeaderText="SubTotal" TextAlignment="Right" Width="110"/>
                                        <syncfusion:GridTextColumn DisplayBinding="{Binding Path=val_des, StringFormat='{}{0:c}'}" HeaderText="Valor Dcto" TextAlignment="Right" Width="100"/>
                                        <syncfusion:GridTextColumn DisplayBinding="{Binding Path=val_iva, StringFormat='{}{0:c}'}"  HeaderText="Valor Iva" TextAlignment="Right" Width="100"/>
                                        <syncfusion:GridTextColumn DisplayBinding="{Binding Path=total, StringFormat='{}{0:c}'}"  HeaderText="Valor Total" TextAlignment="Right" Width="100"/>
                                        <syncfusion:GridTextColumn DisplayBinding="{Binding Path=costo, StringFormat='{}{0:c}'}" HeaderText="Costo" TextAlignment="Right" Width="110"/>
                                    </syncfusion:SfDataGrid.Columns>

                                    <syncfusion:SfDataGrid.GroupSummaryRows>
                                        <syncfusion:GridSummaryRow ShowSummaryInRow="False">
                                            <syncfusion:GridSummaryRow.SummaryColumns>
                                                <syncfusion:GridSummaryColumn Name="SubTotal"
                                                          Format="'{Sum:c}'"
                                                          MappingName="subtotal"
                                                          SummaryType="DoubleAggregate" />
                                                <syncfusion:GridSummaryColumn Name="Valor Dcto"
                                                          Format="'{Sum:c}'"
                                                          MappingName="val_des"
                                                          SummaryType="DoubleAggregate" />
                                                <syncfusion:GridSummaryColumn Name="Valor Iva"
                                                          Format="'{Sum:c}'"
                                                          MappingName="val_iva"
                                                          SummaryType="DoubleAggregate" />
                                                <syncfusion:GridSummaryColumn Name="Valor Total"
                                                          Format="'{Sum:c}'"
                                                          MappingName="total"
                                                          SummaryType="DoubleAggregate" />
                                                <syncfusion:GridSummaryColumn Name="Costo"
                                                          Format="'{Sum:c}'"
                                                          MappingName="costo"
                                                          SummaryType="DoubleAggregate" />

                                            </syncfusion:GridSummaryRow.SummaryColumns>
                                        </syncfusion:GridSummaryRow>
                                        <syncfusion:GridSummaryRow Title="Total de Producto : {YearSales}" ShowSummaryInRow="True">
                                            <syncfusion:GridSummaryRow.SummaryColumns>
                                                <syncfusion:GridSummaryColumn Name="YearSales"
                                                          Format="'{Sum:c}'"
                                                          MappingName="total"
                                                          SummaryType="DoubleAggregate" />
                                                <syncfusion:GridSummaryColumn Name="ProductCount"
                                                          Format="'{Count:d}'"
                                                          MappingName="Name"
                                                          SummaryType="CountAggregate" />
                                            </syncfusion:GridSummaryRow.SummaryColumns>
                                        </syncfusion:GridSummaryRow>
                                    </syncfusion:SfDataGrid.GroupSummaryRows>

                                </syncfusion:SfDataGrid>

                            </Grid>
                        </SiaSf:TabItemExt>

