                            <Button x:Name="BtnSalir" Content="Salir" Grid.Column="12" Margin="5,5,5,5" FontSize="11" Width="90" Background="#FFC107" Foreground="DarkBlue" Click="BtnSalir_Click" IsCancel="True" Cursor="Hand"/>
