        <Style TargetType="SiaSf:GridCell" x:Key="edit">
            <Setter Property="Background" Value="#4CF1C40F"/>
        </Style>
        <Style  x:Key="ButonFiltro">
            <Setter Property="Control.BorderBrush" Value="{x:Null}"/>
