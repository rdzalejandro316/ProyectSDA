<Window x:Class="SiasoftAppExt.EliminacionActivo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SiasoftAppExt"
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="500" Height="400">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Blue.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>



    <Grid>
        <Grid x:Name="GridConfiguracion" Margin="20" Panel.ZIndex="1">
            <Border Background="White">
                <Border.Effect>
                    <DropShadowEffect Direction="0" ShadowDepth="0.5" BlurRadius="5" Color="Black"/>
                </Border.Effect>
            </Border>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <Grid Background="#03A9F4">
                    <TextBlock Text="Eliminacion de activos fijo" TextAlignment="Center" Foreground="White" VerticalAlignment="Center" FontSize="18" />
                </Grid>


                <Grid Grid.Row="1" Width="400" Height="120">
                    <StackPanel>
                        <TextBox x:Name="tx_activo" Grid.Row="1" Width="200" VerticalAlignment="Top" Margin="20 10 20 0" materialDesign:HintAssist.Hint="Codigo Activo" ToolTip="F8 buscar" Style="{StaticResource MaterialDesignFloatingHintTextBox}" PreviewKeyDown="TextBox_PreviewKeyDown" LostFocus="Cuen_LostFocus" CaretBrush="#03A9F4" />       
                        <TextBox x:Name="tx_name" Grid.Row="1" VerticalAlignment="Top" Margin="20 10 20 0" materialDesign:HintAssist.Hint="Nombre Activo" ToolTip="Nombre" Style="{StaticResource MaterialDesignFloatingHintTextBox}" PreviewKeyDown="TextBox_PreviewKeyDown" LostFocus="Cuen_LostFocus" CaretBrush="#03A9F4" IsEnabled="False"/>
                    </StackPanel>
                </Grid>


                <Grid Grid.Row="2" Background="#373737">
                    <Button Name="BtnEliminar" Content="Eliminar" Background="#FF03A9F4" BorderBrush="#FF03A9F4" Width="150" HorizontalAlignment="Center" Margin="0 0 5 0" Click="BtnEliminar_Click"/>
                </Grid>


            </Grid>

        </Grid>


    </Grid>

</Window>
